  "parameters": {
    "u_time": {
      "default": 0.0,
      "min": 0.0,
      "max": 999999.0,
      "description": "Master clock for all animations"
    },
    "u_dimension": {
      "default": 4.0,
      "min": 3.0,
      "max": 5.0,
      "description": "Controls the 4D-ness of geometry"
    },
    "u_morphFactor": {
      "default": 0.5,
      "min": 0.0,
      "max": 1.5,
      "description": "Blends between geometric states"
    },
    "u_rotationSpeed": {
      "default": 1.0,
      "min": 0.0,
      "max": 3.0,
      "description": "Speed of 4D rotational animation"
    },
    "u_gridDensity": {
      "default": 8.0,
      "min": 1.0,
      "max": 25.0,
      "description": "Density of lattice patterns"
    },
    "u_lineThickness": {
      "default": 0.02,
      "min": 0.002,
      "max": 0.1,
      "description": "Thickness of visualizer lines"
    },
    "u_patternIntensity": {
      "default": 1.0,
      "min": 0.0,
      "max": 3.0,
      "description": "Overall brightness/contrast"
    },
    "u_colorShift": {
      "default": 0.0,
      "min": -1.0,
      "max": 1.0,
      "description": "Hue rotation applied to theme"
    },
    "u_glitchIntensity": {
      "default": 0.05,
      "min": 0.0,
      "max": 0.15,
      "description": "Digital glitch effect amount"
    },
    "u_tetraThickness": {
      "default": 0.02,
      "min": 0.001,
      "max": 0.05,
      "description": "Tetrahedron edge thickness"
    },
    "u_shellWidth": {
      "default": 0.1,
      "min": 0.01,
      "max": 0.5,
      "description": "Spherical shell width"
    },
    "u_universeModifier": {
      "default": 1.0,
      "min": 0.1,
      "max": 2.0,
      "description": "Universal geometry modifier"
    }
  },
  "effects": {
    "bloom": {
      "isActive": true,
      "intensity": 0.3,
      "threshold": 0.8,
      "radius": 1.0
    },
    "glitch": {
      "isActive": false,
      "intensity": 0.05,
      "frequency": 0.1
    },
    "chromatic": {
      "isActive": true,
      "intensity": 0.02,
      "offset": 0.001
    }
  }
