  "geometries": [
    {
      "name": "hypercube",
      "shaderFile": "shaders/hypercube.glsl",
      "description": "4D lattice projection"
    },
    {
      "name": "tetrahedron", 
      "shaderFile": "shaders/tetrahedron.glsl",
      "description": "Edge-based geometric rendering"
    },
    {
      "name": "sphere",
      "shaderFile": "shaders/sphere.glsl",
      "description": "Spherical harmonics"
    },
    {
      "name": "torus",
      "shaderFile": "shaders/torus.glsl", 
      "description": "Toroidal flow patterns"
    },
    {
      "name": "klein",
      "shaderFile": "shaders/klein.glsl",
      "description": "Non-orientable surface topology"
    },
    {
      "name": "fractal",
      "shaderFile": "shaders/fractal.glsl",
      "description": "Recursive self-similarity"
    },
    {
      "name": "wave",
      "shaderFile": "shaders/wave.glsl",
      "description": "Quantum probability distribution"
    },
    {
      "name": "crystal",
      "shaderFile": "shaders/crystal.glsl",
      "description": "Ordered molecular structures"
    }
